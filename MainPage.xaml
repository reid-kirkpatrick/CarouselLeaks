<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="CarouselLeaks.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CarouselLeaks"
             xmlns:pancardview="clr-namespace:PanCardView;assembly=PanCardView"
             x:DataType="local:MainViewModel">

	<Grid Padding="32"
	      ColumnDefinitions="*,*"
	      ColumnSpacing="32"
	      RowDefinitions="*,Auto"
	      RowSpacing="16">

		<pancardview:CarouselView Grid.ColumnSpan="2"
		                          ItemsSource="{Binding Items}"
		                          SelectedItem="{Binding SelectedItem}">
			<pancardview:CarouselView.ItemTemplate>
				<DataTemplate>
					<local:ItemView />
				</DataTemplate>
			</pancardview:CarouselView.ItemTemplate>
		</pancardview:CarouselView>

		<Button Grid.Row="1"
		        Command="{Binding RefreshCommand}"
		        Text="Refresh" />

		<Button Grid.Row="1"
		        Grid.Column="1"
		        Command="{Binding CollectCommand}"
		        Text="Run GC" />

	</Grid>

</ContentPage>
